{
  "name": "bloxparty",
  "description": "Multiplayer Tetris built with Electron",
  "version": "1.0.0-alpha",
  "author": "Kevin Neff <kvnneff@gmail.com>",
  "bugs": {
    "url": "https://github.com/kvnneff/bloxparty/issues"
  },
  "dependencies": {
    "bloxparty-board": "git+https://github.com/kvnneff/bloxparty-board.git",
    "bus": "^0.1.0",
    "component-clone": "^0.2.2",
    "component-emitter": "^1.2.0",
    "cuid": "*",
    "deku": "^0.5.5",
    "deku-form": "^1.1.4",
    "electron-debug": "^0.2.1",
    "moniker": "^0.1.2",
    "query-string": "^2.4.1",
    "socket.io-client": "git+https://github.com/socketio/socket.io-client.git",
    "virtual-element": "^1.2.0",
    "wayfarer": "^5.0.1"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "chokidar-cli": "^1.0.1",
    "dependency-check": "^2.5.1",
    "duo": "^0.15.3",
    "duo-babel": "^6.0.0",
    "duo-myth": "^0.2.0",
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.33.0",
    "fixpack": "^2.2.0",
    "http-server": "^0.8.0",
    "mocha": "^2.3.2",
    "myth": "^1.5.0",
    "standard": "^5.2.2"
  },
  "electronVersion": "0.33.0",
  "homepage": "https://github.com/kvnneff/bloxparty-server#readme",
  "keywords": [
    "electron",
    "game",
    "multiplayer",
    "tetris"
  ],
  "license": "MIT",
  "main": "index.js",
  "productName": "BloxParty",
  "repository": "https://github.com/kvnneff/bloxparty.git",
  "scripts": {
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion",
    "build-css": "duo --use duo-myth lib/index.css",
    "build-js": "browserify lib/index.js -t [babelify --ignore socket.io-client --ignore electron-debug] --outfile build/lib/index.js",
    "build-ui": "npm run build-js & npm run build-css",
    "check": "npm run lint && fixpack",
    "lint": "standard ./lib/**/*.js",
    "start": "electron .",
    "server": "http-server ./",
    "test": "",
    "watch": "npm run watch-css & npm run watch-js",
    "watch-css": "chokidar './lib/**/*.css' -c 'npm run build-css'",
    "watch-js": "chokidar './lib/**/*.js' -c 'npm run build-js'"
  }
}
